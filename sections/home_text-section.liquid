<section data-section-id="{{ section.id }}" id="home-text-section">
	<div class="wrapper">
		
		<div class="eyebrow_text">
			<h3 class="h5">{{ section.settings.title }}</h3>
		</div>
		<div class="slash-wrap">
			<span class="slash-img"></span>
		</div>
		<div class="main_text">
			<h2 class="h3">{{ section.settings.main_text }}</h2>
		</div>

	</div>
</section>


{% schema %}
  {
    "name": "Text_section",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Hello world"
      },
      {
        "id": "main_text",
        "type": "textarea",
        "label": "Main Text",
        "default": "Hello world"
      }
    ],
	  "presets": [
	    {
	      "name": "Text Section",
	      "category": "Home Page"
	    }
	  ]
  }
{% endschema %}